<system-data-structure>
    <group identifier="PAGE">
        <asset type="block" identifier="CSS-BLOCK" label="CSS Block" multiple="true" render-content-depth="unlimited" help-text="Attach custom CSS into page header"/>
        <text multi-line="true" identifier="CSS-SNIPPET" label="CSS Snippet" help-text="Page-level CSS snippet" rows="1" cols="30"/>
        <group identifier="SECTION" multiple="true">
            <text identifier="ATTRIBUTES" label="Attribute(s)" default="class='section'" size="30" help-text="Ex: class='section'"/>
            <text identifier="BACKGROUND-COLOR" label="Background Color" default="#ffffff" size="30" help-text="#ffffff"/>
            <asset type="file" identifier="BACKGROUND-IMAGE" label="Background Image" help-text="CSS background image"/>
            <text identifier="PADDING" label="Padding" default="64px 12px" size="30" help-text="Ex: 64px 12px"/>
            <group identifier="ROW" multiple="true">
                <text identifier="ATTRIBUTES" label="Attribute(s)" default="class='row'" size="30" help-text="Ex: class='row'"/>
                <group identifier="COLUMN" multiple="true">
                    <text identifier="ATTRIBUTES" label="Attribute(s)" default="class='col-12'" size="30" help-text="Ex: class='col-12'"/>
                    <group identifier="CONTENT" multiple="true">
                        <text type="dropdown" identifier="TYPE" label="Content Type" default="h1" help-text="HTML Content type">
                            <dropdown-item value="h1" show-fields="PAGE/SECTION/ROW/COLUMN/CONTENT/ITEM/TEXT, PAGE/SECTION/ROW/COLUMN/CONTENT/ATTRIBUTES"/>
                            <dropdown-item value="h2" show-fields="PAGE/SECTION/ROW/COLUMN/CONTENT/ITEM/TEXT, PAGE/SECTION/ROW/COLUMN/CONTENT/ATTRIBUTES"/>
                            <dropdown-item value="h3" show-fields="PAGE/SECTION/ROW/COLUMN/CONTENT/ITEM/TEXT, PAGE/SECTION/ROW/COLUMN/CONTENT/ATTRIBUTES"/>
                            <dropdown-item value="p" show-fields="PAGE/SECTION/ROW/COLUMN/CONTENT/ITEM/TEXT, PAGE/SECTION/ROW/COLUMN/CONTENT/ATTRIBUTES"/>
                            <dropdown-item value="a" show-fields="PAGE/SECTION/ROW/COLUMN/CONTENT/ITEM/TEXT, PAGE/SECTION/ROW/COLUMN/CONTENT/ATTRIBUTES, PAGE/SECTION/ROW/COLUMN/CONTENT/ITEM/INTERNAL-PATH, PAGE/SECTION/ROW/COLUMN/CONTENT/ITEM/EXTERNAL-PATH, PAGE/SECTION/ROW/COLUMN/CONTENT/ITEM/TARGET"/>
                            <dropdown-item value="ul" show-fields="PAGE/SECTION/ROW/COLUMN/CONTENT/ITEM/TEXT, PAGE/SECTION/ROW/COLUMN/CONTENT/ATTRIBUTES"/>
                            <dropdown-item value="div" show-fields="PAGE/SECTION/ROW/COLUMN/CONTENT/ITEM/TEXT, PAGE/SECTION/ROW/COLUMN/CONTENT/ATTRIBUTES"/>
                            <dropdown-item value="amp-img" show-fields="PAGE/SECTION/ROW/COLUMN/CONTENT/ATTRIBUTES, PAGE/SECTION/ROW/COLUMN/CONTENT/ITEM/INTERNAL-MEDIA, PAGE/SECTION/ROW/COLUMN/CONTENT/ITEM/EXTERNAL-MEDIA, PAGE/SECTION/ROW/COLUMN/CONTENT/ITEM/WIDTH, PAGE/SECTION/ROW/COLUMN/CONTENT/ITEM/HEIGHT, PAGE/SECTION/ROW/COLUMN/CONTENT/ITEM/LAYOUT, PAGE/SECTION/ROW/COLUMN/CONTENT/ITEM/ALT-TEXT, PAGE/SECTION/ROW/COLUMN/CONTENT/ITEM/INTERNAL-PATH, PAGE/SECTION/ROW/COLUMN/CONTENT/ITEM/EXTERNAL-PATH, PAGE/SECTION/ROW/COLUMN/CONTENT/ITEM/TARGET"/>
                            <dropdown-item value="amp-video" show-fields="PAGE/SECTION/ROW/COLUMN/CONTENT/ATTRIBUTES, PAGE/SECTION/ROW/COLUMN/CONTENT/AUTOPLAY, PAGE/SECTION/ROW/COLUMN/CONTENT/LOOP, PAGE/SECTION/ROW/COLUMN/CONTENT/ITEM/INTERNAL-MEDIA, PAGE/SECTION/ROW/COLUMN/CONTENT/ITEM/EXTERNAL-MEDIA, PAGE/SECTION/ROW/COLUMN/CONTENT/ITEM/VIDEO-POSTER, PAGE/SECTION/ROW/COLUMN/CONTENT/ITEM/WIDTH, PAGE/SECTION/ROW/COLUMN/CONTENT/ITEM/HEIGHT, PAGE/SECTION/ROW/COLUMN/CONTENT/ITEM/LAYOUT, PAGE/SECTION/ROW/COLUMN/CONTENT/ITEM/ALT-TEXT"/>
                            <dropdown-item value="amp-carousel" show-fields="PAGE/SECTION/ROW/COLUMN/CONTENT/ATTRIBUTES, PAGE/SECTION/ROW/COLUMN/CONTENT/WIDTH, PAGE/SECTION/ROW/COLUMN/CONTENT/HEIGHT, PAGE/SECTION/ROW/COLUMN/CONTENT/LAYOUT, PAGE/SECTION/ROW/COLUMN/CONTENT/AUTOPLAY, PAGE/SECTION/ROW/COLUMN/CONTENT/LOOP, PAGE/SECTION/ROW/COLUMN/CONTENT/INDICATORS, PAGE/SECTION/ROW/COLUMN/CONTENT/DELAY, PAGE/SECTION/ROW/COLUMN/CONTENT/ITEM/TEXT, PAGE/SECTION/ROW/COLUMN/CONTENT/ITEM/INTERNAL-MEDIA, PAGE/SECTION/ROW/COLUMN/CONTENT/ITEM/EXTERNAL-MEDIA, PAGE/SECTION/ROW/COLUMN/CONTENT/ITEM/ALT-TEXT, PAGE/SECTION/ROW/COLUMN/CONTENT/ITEM/INTERNAL-PATH, PAGE/SECTION/ROW/COLUMN/CONTENT/ITEM/EXTERNAL-PATH, PAGE/SECTION/ROW/COLUMN/CONTENT/ITEM/TARGET"/>
                            <dropdown-item value="amp-iframe" show-fields="PAGE/SECTION/ROW/COLUMN/CONTENT/ATTRIBUTES, PAGE/SECTION/ROW/COLUMN/CONTENT/SANDBOX, PAGE/SECTION/ROW/COLUMN/CONTENT/ITEM/EXTERNAL-MEDIA, PAGE/SECTION/ROW/COLUMN/CONTENT/ITEM/WIDTH, PAGE/SECTION/ROW/COLUMN/CONTENT/ITEM/HEIGHT, PAGE/SECTION/ROW/COLUMN/CONTENT/ITEM/LAYOUT, PAGE/SECTION/ROW/COLUMN/CONTENT/ITEM/ALT-TEXT"/>
                            <dropdown-item value="block" show-fields="PAGE/SECTION/ROW/COLUMN/CONTENT/ATTRIBUTES, PAGE/SECTION/ROW/COLUMN/CONTENT/ITEM/BLOCK, PAGE/SECTION/ROW/COLUMN/CONTENT/ITEM/FORMAT"/>
                            <dropdown-item value="WYSIWYG" show-fields="PAGE/SECTION/ROW/COLUMN/CONTENT/ATTRIBUTES, PAGE/SECTION/ROW/COLUMN/CONTENT/ITEM/WYSIWYG"/>
                        </text>
                        <text identifier="ATTRIBUTES" label="Attribute(s)" default="class='content'" size="30" help-text="Ex: id='custom-content'"/>
                        <text identifier="WIDTH" label="Width" size="30" help-text="AMP element width"/>
                        <text identifier="HEIGHT" label="Height" size="30" help-text="AMP element height"/>
                        <text type="dropdown" identifier="LAYOUT" label="Layout" default="responsive" help-text="AMP element behavior">
                            <dropdown-item value="nodisplay"/>
                            <dropdown-item value="responsive"/>
                            <dropdown-item value="fixed"/>
                            <dropdown-item value="fixed-height"/>
                            <dropdown-item value="fill"/>
                            <dropdown-item value="container"/>
                            <dropdown-item value="flex-item"/>
                        </text>
                        <text type="dropdown" identifier="AUTOPLAY" label="Autoplay" default="true" help-text="Carousel auto loop">
                            <dropdown-item value="true"/>
                            <dropdown-item value="false"/>
                        </text>
                        <text type="dropdown" identifier="LOOP" label="Loop" default="true" help-text="Carousel restart behavior">
                            <dropdown-item value="true"/>
                            <dropdown-item value="false"/>
                        </text>
                        <text type="dropdown" identifier="INDICATORS" label="Indicators" default="true" help-text="Carousel indicators">
                            <dropdown-item value="true"/>
                            <dropdown-item value="false"/>
                        </text>
                        <text identifier="DELAY" label="Delay" default="4000" size="30" help-text="Carousel rate"/>
                        <text identifier="SANDBOX" label="Sandbox" default="allow-same-origin allow-scripts allow-popups allow-forms allow-top-navigation" size="30" help-text="iframe sandbox rules"/>
                        <group identifier="ITEM" multiple="true">
                            <text identifier="TEXT" label="Text" size="30" help-text="Basic HTML text"/>
                            <asset type="file" identifier="INTERNAL-MEDIA" label="Internal Media" help-text="Choose a file"/>
                            <asset type="file" identifier="VIDEO-POSTER" label="Video Poster" help-text="Default image while video loads"/>
                            <asset type="block" identifier="BLOCK" label="Block" render-content-depth="unlimited" help-text="Choose a block item from the CMS"/>
                            <text identifier="FORMAT" label="Format" size="30" help-text="Ex: site://APPS-KAHALA-WWW/+GLOBAL-FORMATS/FAQ-BUILDER-AMP"/>
                            <text identifier="EXTERNAL-MEDIA" label="External Media" size="30" help-text="This can override MEDIA for 'img', 'video' or 'carousel' elements."/>
                            <text identifier="WIDTH" label="Width" size="30" help-text="Leave empty to inherit parent width. Do not include 'px' or other values"/>
                            <text identifier="HEIGHT" label="Height" size="30" help-text="Leave empty to inherit parent height. Do not include 'px' or other values"/>
                            <text type="dropdown" identifier="LAYOUT" label="Layout" default="responsive" help-text="AMP element behavior">
                                <dropdown-item value="nodisplay"/>
                                <dropdown-item value="responsive"/>
                                <dropdown-item value="fixed"/>
                                <dropdown-item value="fixed-height"/>
                                <dropdown-item value="fill"/>
                                <dropdown-item value="container"/>
                                <dropdown-item value="flex-item"/>
                            </text>
                            <text identifier="ALT-TEXT" label="Alt Text" size="30" help-text="Required for ADA"/>
                            <asset type="page" identifier="INTERNAL-PATH" label="Internal Link" help-text="Select a page from within the CMS"/>
                            <text identifier="EXTERNAL-PATH" label="External Link" size="30" help-text="Choose a link from outside the CMS"/>
                            <text type="dropdown" identifier="TARGET" label="Target" default="_self" help-text="Choose to redirect user to a new page, or open a new tab">
                                <dropdown-item value="_self"/>
                                <dropdown-item value="_blank"/>
                            </text>
                            <text wysiwyg="true" identifier="WYSIWYG" label="WYSIWYG" help-text="Avoid using inline styling to prevent AMP conflicts" wysiwyg-toolbar-remove="font formatting,font assignment,text formatting,insert image,insert table,"/>
                        </group>
                    </group>
                </group>
            </group>
        </group>
    </group>
</system-data-structure>